<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jeremynapitupulu.todolist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jeremynapitupulu.todolist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jeremynapitupulu.todolist.editScreen"
            android:label="@string/edit_screen_title"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="jeremynapitupulu.todolist.addScreen"
            android:label="@string/add_screen_title"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="jeremynapitupulu.todolist.deleteScreen" >
        </activity>
    </application>

</manifest>